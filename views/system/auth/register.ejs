<%- include('../partials/html_header') %>

<!--			nav start -->
<%- include('../partials/header') %>
<!--			nav end-->

<div class="container">
    <h1>Register</h1>
    <%- include('../partials/alert') %>
    <div class="row justify-content-center">

        <div class="col-lg-6">
            <form method="post" action="/register">
                <div class="form-group">
                    <label for="email">Email address</label>
                    <input type="email" name="email" class="form-control" id="email" aria-describedby="emailHelp" placeholder="Enter email" value="<%= oldInput.email %>">
                    <small id="emailHelp" class="form-text text-danger"><%= errors.email %></small>
                </div>

                <div class="form-group">
                    <label for="firstName">First Name</label>
                    <input type="text" name="firstName" class="form-control" id="firstName" aria-describedby="firstNameHelp" placeholder="Enter First Name" value="<%= oldInput.firstName %>">
                    <small id="firstNameHelp" class="form-text text-danger"><%= errors.firstName %></small>
                </div>

                <div class="form-group">
                    <label for="lastName">Last Name</label>
                    <input type="text" name="lastName" class="form-control" id="lastName" aria-describedby="lastNameHelp" placeholder="Enter LastName" value="<%= oldInput.lastName %>">
                    <small id="lastNameHelp" class="form-text text-danger"><%= errors.lastName %></small>
                </div>

                <div class="form-group">
                    <label for="lastName">Address</label>
                    <input type="text" name="address" class="form-control" id="lastName" aria-describedby="addressHelp" placeholder="Enter Address" value="<%= oldInput.address %>">
                    <small id="addressHelp" class="form-text text-danger"><%= errors.adress %></small>
                </div>

                <div class="form-group">
                    <label for="lastName">Phone</label>
                    <input type="text" name="phone" class="form-control" id="lastName" aria-describedby="phoneHelp" placeholder="Enter Phone" value="<%= oldInput.phone %>">
                    <small id="phoneHelp" class="form-text text-danger"><%= errors.phone %></small>
                </div>

                <div class="form-group">
                    <label for="age">Age</label>
                    <input type="number" name="age" class="form-control" id="age" aria-describedby="ageHelper" placeholder="Enter Age" value="<%= oldInput.age %>">
                    <small id="ageHelper" class="form-text text-danger"><%= errors.age %></small>
                </div>


                <div class="form-group">
                    <label for="exampleInputPassword1">Password</label>
                    <input type="password" name="password" class="form-control" id="exampleInputPassword1" placeholder="Password">
                    <small id="passwordHelp" class="form-text text-danger"><%= errors.password %></small>
                </div>

                <button type="submit" class="btn btn-primary">Submit</button>
            </form>
        </div>
    </div>

</div>



<%- include('../partials/html_footer') %>





