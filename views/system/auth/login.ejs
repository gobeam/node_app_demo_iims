<div class="container">
    <h1>Login</h1>
    <%- include('../partials/alert') %>
    <div class="row justify-content-center">

        <div class="col-lg-6">
            <form method="post" action="/login">
                <div class="form-group">
                    <label for="email">Email address</label>
                    <input type="email" name="email" class="form-control" id="email" aria-describedby="emailHelp" placeholder="Enter email" value="<%= oldInput.email %>">
                    <small id="emailHelp" class="form-text text-danger"><%= errors.email %></small>
                </div>

                <div class="form-group">
                    <label for="exampleInputPassword1">Password</label>
                    <input type="password" name="password" class="form-control" id="exampleInputPassword1" placeholder="Password">
                    <small id="passwordHelp" class="form-text text-danger"><%= errors.password %></small>
                </div>

                <button type="submit" class="btn btn-primary">Submit</button>
            </form>
        </div>
    </div>
</div>



<%- include('../partials/html_footer') %>





